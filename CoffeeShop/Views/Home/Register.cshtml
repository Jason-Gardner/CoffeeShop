@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Client

<h1>Register</h1>
<br />

<form asp-controller="Home" asp-action="createUser">
    <fieldset>
        <div>
            <select name="AccountType">
                <option value="Home">Home</option>
                <option value="Business">Business</option>
            </select>
        </div>
    </fieldset>
    <fieldset style="width: 25%">
        <div class="form-group" >
            <label asp-for="UserName">User Name</label>
            <input asp-for="UserName" class="form-control" name="UserName" pattern="[A-Za-z0-9]{8,30}" required />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="FirstName" pattern="[A-Za-z]{2,15}" required />
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" name="LastName" pattern="[A-Za-z]{2,15}" required />
        </div>
    </fieldset>

    <fieldset style="width: 25%">
        <div class="form-group">
            <label>Phone Number</label>
            <input type="tel" name="Phone" class="form-control" placeholder="XXX-XXX-XXXX Format" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="Email" placeholder="yourname@@company.com (Example)" pattern="[A-Za-z0-9]+@@[A-Za-z]+.[A-Za-z]{3}" required />
        </div>
    </fieldset>

    <fieldset style="width: 25%">
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="Password" placeholder="Must start with a capital letter and be at least 8 alphanumeric characters" pattern="[A-Z][A-Za-z0-9].{8,}" required />
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="cpassword" placeholder="Must match with above password" required />
        </div>
        <div class="form-group">
            <input type="submit">
        </div>
    </fieldset>

</form>

<div class="register">
    <p>Already have an account? You can <a asp-action="Login">click here</a> to log in.</p>
</div>


